 @model OurProject.Models.Orders

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Order</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa; /* Light gray background */
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff; /* White background */
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Shadow effect */
        }

        h1, h3 {
            color: #A28C7; /* Blue color for headings */
            text-align: center;
        }

        .btn-delete {
            background-color: #A28C7; /* Blue color for delete button */
            border: none;
            color: #fff; /* White text color */
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-delete:hover {
                background-color: #7a6e9c; /* Darker blue on hover */
            }

        .btn-secondary {
            background-color: #fff; /* White background for secondary button */
            border: 1px solid #A28C7; /* Blue border */
            color: #A28C7; /* Blue text color */
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            transition: color 0.3s, border-color 0.3s;
        }

            .btn-secondary:hover {
                color: #7a6e9c; /* Darker blue on hover */
                border-color: #7a6e9c; /* Darker blue border on hover */
            }

        .row dt {
            color: #A28C7; /* Blue color for term in definition list */
            font-weight: bold;
        }

        .row dd {
            color: #6c757d; /* Gray color for description in definition list */
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Delete Order</h1>
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Order Details</h4>
            <hr>
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderDate)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderDate)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Price)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Customers)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Customers.Id)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Payments)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Payments.Method)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Shipments)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Shipments.Address)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-delete">Delete</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </form>
        </div>
    </div>

</body>
</html>
