@model AlGallery.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Form</title>
    <link href="~/css/login.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
<div class="login">
<div class="background">
    <span class="heading-2">
        LOG In
    </span>
</div>

<div class="main">
    <div class="person_image"><img src="../assets/images/ee792b23230f5071ba8a105cddc592af-removebg-preview.png"></div>
    <div class="main" asp-action="Login">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="form_main"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" ></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" ></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <a asp-area="" asp-controller="" asp-action="">
                    <span class="forgetpassword">
                        Forgot your Password?
                    </span>
                </a>
            </form>
        </div>
    </div>
    </div>
    </body>
