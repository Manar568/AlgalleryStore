
@{
    Layout = "_LayoutAdmin";
}
 @model AlGallery.Models.Products

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #A28C7F;
            text-align: center;
            margin-bottom: 20px;
        }

        h3 {
            color: #6c757d;
            text-align: center;
            margin-bottom: 20px;
        }

        .row {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .col-sm-2 {
            flex: 1;
            color: #A28C7F;
            font-weight: bold;
        }

        .col-sm-10 {
            flex: 3;
            color: #495057;
        }

        .btn-danger,
        .btn-back {
            padding: 10px 20px;
            background-color: #A28C7F;
            color: #fff;
            text-decoration: none;
            border: none;
            border-radius: 4px;
            transition: background-color 0.3s;
            cursor: pointer;
        }

            .btn-danger:hover,
            .btn-back:hover {
                background-color: #7e6c5f;
            }

        .btn-back {
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Delete Product</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f8f9fa;
                margin: 0;
                padding: 0;
            }

            .container {
                max-width: 800px;
                margin: 50px auto;
                padding: 20px;
                background-color: #fff;
                border-radius: 8px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

            h1 {
                color: #A28C7F;
                text-align: center;
                margin-bottom: 20px;
            }

            h3 {
                color: #6c757d;
                margin-top: 20px;
            }

            .row {
                margin-bottom: 10px;
            }

            .col-sm-2 {
                font-weight: bold;
                color: #A28C7F;
            }

            .btn-container {
                display: flex;
                justify-content: flex-end;
                margin-top: 20px;
            }

            .btn {
                color: #fff;
                background-color: #A28C7F;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                text-decoration: none;
                transition: background-color 0.3s;
                cursor: pointer;
            }

                .btn:hover {
                    background-color: #7e6c5f;
                }

                .btn + .btn {
                    margin-left: 10px;
                }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>Delete Product</h1>
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <div class="row">
                    <div class="col-sm-2">@Html.DisplayNameFor(model => model.Price)</div>
                    <div class="col-sm-10">@Html.DisplayFor(model => model.Price)</div>
                </div>
                <div class="row">
                    <div class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</div>
                    <div class="col-sm-10">@Html.DisplayFor(model => model.Description)</div>
                </div>
                <div class="row">
                    <div class="col-sm-2">@Html.DisplayNameFor(model => model.Stock)</div>
                    <div class="col-sm-10">@Html.DisplayFor(model => model.Stock)</div>
                </div>
                <div class="row">
                    <div class="col-sm-2">@Html.DisplayNameFor(model => model.Image)</div>
                    <div class="col-sm-10">@Html.DisplayFor(model => model.Image)</div>
                </div>
                <div class="row">
                    <div class="col-sm-2">@Html.DisplayNameFor(model => model.Categories)</div>
                    <div class="col-sm-10">@Html.DisplayFor(model => model.Categories.Id)</div>
                </div>
                <div class="row">
                    <div class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</div>
                    <div class="col-sm-10">@Html.DisplayFor(model => model.Name)</div>
                </div>
                <div class="btn-container">
                    @* <a asp-action="Delete" asp-for="Id" class="btn btn-back">Delete</a> *@
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-back">Delete</button>
                    </form>
                    <a asp-action="Index" class="btn btn-back">Back to List</a>
                </div>
            </div>
        </div>
    </body>
</html>

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}